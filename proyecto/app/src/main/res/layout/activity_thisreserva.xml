<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ThisReservaActivity">

    <LinearLayout
        android:id="@+id/title_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserva"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Precio)"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_reservamenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="Imagen Reserva"
        android:scaleType="fitCenter"
        android:src="@drawable/img_bookuad_quadmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_block" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_enviar"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/whatsapp_green"
        android:elevation="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Enviar info."
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_reservamenu" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_datos_reserva"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/primary"
        android:elevation="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Datos"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_enviar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_eliminar_reserva"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/danger"
        android:elevation="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Eliminar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_datos_reserva" />

</androidx.constraintlayout.widget.ConstraintLayout>
